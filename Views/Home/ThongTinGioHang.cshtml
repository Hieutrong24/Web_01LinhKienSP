
@{
    ViewBag.Title = "ThongTinGioHang";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";


}
@Html.AntiForgeryToken()
@section scripts {
    <script>
        const sanPham_GioHang = @Html.Raw(Json.Encode(Model));
    </script>
    <script src="~/Scripts/MyYourJavaScript.js"></script>
}



@if (Session["Email"] != null)
{
    <div class="row row-cols-2" id="page-cart">
        <div class="col-4 border">
            <div class="col-12 fw-bold mt-5 ">
                <button type="submit" class="rounded-3 col-12 p-3 bg-primary-subtle">Thông tin giỏ hàng của anh @Session["Hoten"]</button>

            </div>
            <div class="mt-5 border ">
                <button type="submit" class="rounded-2 bg-warning-subtle col-12">Lịch sử mua hàng</button>
            </div>
            <div class="border rounded-3">
                <label for="selectTinh">Chọn Tỉnh/Thành phố:</label>
                <select id="selectTinh" class="form-control">
                    <option value="">-- Chọn tỉnh --</option>
                </select>

                <label for="selectXa" class="mt-3">Chọn Xã/Phường:</label>
                <select id="selectXa" class="form-control">
                    <option value="">-- Chọn xã --</option>
                </select>

            </div>
            <div class="row justify-content-center p-4 mt-lg-5">
                <div id="tongTien" class="mb-3 text-danger fw-bold fs-5">
                    Tổng tiền: 0 VNĐ
                </div>
                <button id="btnDatHang" class="btn btn-danger rounded-3 col-4">Đăt hàng</button>
            </div>
        </div>
        <div id="container" class="col-8 overflow-auto" style="height:768px;" >

        </div>
    </div>
}
else
{
    <p class="text-center">
        <a href="/Home/DangNhap" class="btn btn-primary">Đăng nhập</a>
    </p>

}


